<odoo>

    <record id="project_view_tree" model="ir.ui.view">
        <field name="name">project tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="task_name" string="Task  Name" />
                <field name="assign_to" string="Assign To" />
                <field name="description" string="Description" />
                <field name="due_date" string="Due Date" />
                <field name="status" string="Status" />
            </tree>
        </field>
    </record>

    <record id="project_view_form" model="ir.ui.view">
        <field name="name">project form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="" />
                        <button name="action_in_progress" type="object" class="btn-primary"
                            string="In Progress" invisible="status == 'in_progress'" />
                        <button name="action_completed" type="object" class="btn-success"
                            string="Completed" invisible="status != 'in_progress'" />
                    </header>
                    <div class="oe_title">
                        <label for="task_name" />
                        <h1>
                            <field name="task_name" string="Name of Task" />
                        </h1>
                    </div>
                    <group string="General Info.">
                        <field name="assign_to" string="Assign To" widget="many2many_tags" />
                        <field name="due_date" string="Due Date" />
                        <field name="description" string="Description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="Task_view_search" model="ir.ui.view">
        <field name="name">Task Search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name" />
                <field name="assign_to" />

                <filter name="is_new" string="New" domain="[('status','=','new_in')]" />
                <filter name="is_in_progress" string="In Progress" domain="[('status','=','in_progress')]" />
                <filter name="is_complete" string="Completed" domain="[('status','=','completed')]" />

                <filter name="group_assign_to" string="Assign To" context="{'group_by':'assign_to'}" />
                <filter name="group_status" string="Status" context="{'group_by':'status'}" />
                <filter name="group_due_date" string="Due Date" context="{'group_by':'due_date'}" />
            </search>
        </field>
    </record>

    <record id="project_action" model="ir.actions.act_window">
        <field name="name">Task List</field>
        <field name="res_model">todo.task</field>
    </record>

    <menuitem
        id="task_ment_item"
        name="Projects"
        parent="project_menu"
        action="project_action"
    />
</odoo>
