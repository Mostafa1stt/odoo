<odoo>
    <record id="user_view_tree" model="ir.ui.view">
        <field name="name">user list</field>
        <field name="model">user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name" />
                <field name="phone" string="Phone" />
                <field name="address" string="Address" />
                <field name="work_on" string="Works On" />
            </tree>
        </field>
    </record>

    <record id="user_view_form" model="ir.ui.view">
        <field name="name">user form</field>
        <field name="model">user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group string="General Info.">
                        <field name="phone" string="Phone" />
                        <field name="address" string="Address" />
                        <field name="work_on" string="Works On" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="user_view_search" model="ir.ui.view">
        <field name="name">User Search</field>
        <field name="model">user</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="phone" />
            </search>
        </field>
    </record>

    <record id="user_action" model="ir.actions.act_window">
        <field name="name">User List</field>
        <field name="res_model">user</field>
    </record>

    <menuitem
        id="user_ment_item"
        name="Users"
        parent="user_menu"
        action="user_action"
    />

</odoo>
